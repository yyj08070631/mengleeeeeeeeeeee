border-bottom-1px($color)
  position:relative
  &:after
    position:absolute
    display:block
    width:100%
    left:0
    bottom:0
    border-top:1px solid $color
    content:''
border-top-1px($color)
  position:relative
  &:after
    position:absolute
    display:block
    width:100%
    left:0
    top:0
    border-top:1px solid $color
    content:''    
 border-top-none()
   &:after
    display: none
    margin-bottom: 0
 border-bottom-none()
   &:after
    display: none
    margin-top: 0   
bg-image($url)
  background-image: url($url+"@2x.png")
  @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
    background-image: url($url+"@3x.png")
