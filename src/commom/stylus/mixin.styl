border-bottom-1px($color)
  position:relative
  &:after
    position:absolute
    display:block
    width:100%
    left:0
    bottom:0
    border-top:0.0625rem solid $color
    content:''
border-top-1px($color)
  position:relative
  &:after
    position:absolute
    display:block
    width:100%
    left:0
    top:0
    border-top:0.0625rem solid $color
    content:''    
 border-top-none()
   &:after
    display: none
    margin-bottom: 0
 border-bottom-none()
   &:after
    display: none
    margin-top: 0   
bg-image($url)
  background-image: url($url+"$2x.png")
  $media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
    background-image: url($url+"$3x.png")
bg-change($url)
  background-image: url("./"+$url+"-active.png")
  background-size: 0.625rem 0.625rem 
  background-repeat: no-repeat
headerCss()
  display: block
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 80px
  z-index: 450
  background: #f9f9f9
  overflow: hidden
  .header-content
      position: relative
      width: 100%
      height: 84px
      line-height: 84px
      border-bottom-1px(#e5e5e5)
      .goBack
          margin-left 16px
          position: absolute
          height: 100%
          img
            position: absolute
            top: 50%
            margin-top: -10px
          span
            margin-left: 15px
            vertical-align: top
            font-size: 26px
            color: #ea68a2
          
      .search
          position: absolute
          right: 0.9375rem
          top: 50%
          margin-top: -16px
          width: 32px
          height: 32px
      .title
          text-align: center
          font-size: 28px
          font-weight: 800
// 字体适配mixin
footerCss()
    position : fixed
    bottom: 0
    left: 0
    width: 100%
    z-index: 1000
getFontsize($px)
    font-size round($px / 2) * 1px
    [data-dpr="2"] &
        font-size $px * 1px
    [data-dpr="2.5"] &
        font-size round($px * 2.5 / 2) * 1px
    [data-dpr="2.75"] &
        font-size round($px * 2.75 / 2) * 1px
    [data-dpr="3"] &
        font-size round($px / 2 * 3) * 1px
    [data-dpr="4"] &
        font-size $px * 2px
    